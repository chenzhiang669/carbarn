<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.carbarn.inter.mapper.UserMapper">

    <select id="findById" resultType="com.carbarn.inter.pojo.User">
        SELECT * FROM users WHERE id = #{id}
    </select>

    <select id="findAll" resultType="com.carbarn.inter.pojo.User">
        SELECT * FROM users
    </select>

    <insert id="insert" parameterType="com.carbarn.inter.pojo.User">
        INSERT INTO users(id, name, age) VALUES(#{id}, #{name}, #{age})
    </insert>

    <update id="update" parameterType="com.carbarn.inter.pojo.User">
        UPDATE users SET name=#{name}, age=#{age} WHERE id=#{id}
    </update>

    <delete id="delete">
        DELETE FROM users WHERE id=#{id}
    </delete>

</mapper>