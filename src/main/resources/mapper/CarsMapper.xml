        left join (select type_id, `type` from car_type where `language`= #{language}) d on a.type_id = d.type_id
        where b.brand_id is not null and c.series_id is not null and d.type_id is not null
        order by ${order_field} ${order_way}
        limit #{pageStart}, #{pageSize}
    </select>

    <select id="searchCarsByKeywords" resultType="com.carbarn.inter.pojo.dto.cars.FirstPageCarsDTO">

        select
        a.id as id,
        a.user_id as user_id,
        concat(b.brand, " ", c.series, " ", d.`type`) as name,
        a.plate_issue_date as plate_issue_date,
        a.mileage as mileage,
        a.price as price,
        a.upload_date as upload_date,
        a.city as city,
        a.header_picture as header_picture,
        a.manufacture_date as manufacture_date
        from
        (SELECT
        *
        FROM
        cars
        <where>
            <if test="brandIds != null and !brandIds.isEmpty() or seriesIds != null and !seriesIds.isEmpty()">
                AND (
                <if test="brandIds != null and !brandIds.isEmpty()">
                    brand_id IN
                    <foreach item="item" collection="brandIds" open="(" separator="," close=")">
                        #{item}
                    </foreach>
                </if>
                <if test="seriesIds != null and !seriesIds.isEmpty()">
                    <choose>
                        <when test="brandIds != null and !brandIds.isEmpty()">
                            OR series_id IN
                        </when>
                        <otherwise>
                            series_id IN
                        </otherwise>
                    </choose>
                    <foreach item="item" collection="seriesIds" open="(" separator="," close=")">
                        #{item}
                    </foreach>
                </if>
                )
            </if>
            <if test="searchCarsDTO.plate_issue_date != null">
                AND plate_issue_date = #{searchCarsDTO.plate_issue_date}
            </if>
            <if test="searchCarsDTO.province != null and searchCarsDTO.province != ''">
