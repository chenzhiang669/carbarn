    <select id="searchCars" resultType="com.carbarn.inter.pojo.dto.cars.FirstPageCarsDTO">

        select
        a.id as id,
        a.user_id as user_id,
        concat(b.brand, " ", c.series, " ", d.`type`) as name,
        a.plate_issue_date as plate_issue_date,
        a.mileage as mileage,
        a.price as price,
        a.upload_date as upload_date,
        a.city as city,
        a.header_picture as header_picture,
        a.manufacture_date as manufacture_date
        from
        (SELECT
        *
        FROM
        cars
        <where>
            <if test="brand_id != -1">
                AND brand_id = #{brand_id}
            </if>
            <if test="series_id != -1">
                AND series_id = #{series_id}
            </if>
            <if test="type_id != -1">
                AND type_id = #{type_id}
            </if>
            <if test="plate_issue_date != null">
                AND plate_issue_date = #{plate_issue_date}
            </if>
            <if test="province != null and province != null">
                AND province = #{province}
            </if>
            <if test="city != null and city != ''">
                AND city = #{city}
            </if>
            <if test="type_of_car != null and !type_of_car.isEmpty()">
                AND type_of_car IN
                <foreach item="item" collection="type_of_car" open="(" separator="," close=")">
                    #{item}
                </foreach>
            </if>
            <if test="displacement != 0.0 and displacement_type != null">
                AND displacement = #{displacement} AND displacement_type = #{displacement_type}
            </if>
            <if test="color != null and !color.isEmpty()">
                AND color IN
                <foreach item="item" collection="color" open="(" separator="," close=")">
                    #{item}
                </foreach>
            </if>
            <if test="origin_country != null and !origin_country.isEmpty()">
                AND origin_country IN
                <foreach item="item" collection="origin_country" open="(" separator="," close=")">
                    #{item}
                </foreach>
            </if>
            <if test="transmission != null and !transmission.isEmpty()">
                AND transmission IN
                <foreach item="item" collection="transmission" open="(" separator="," close=")">
                    #{item}
                </foreach>
            </if>
            <if test="type_of_manu != null and !type_of_manu.isEmpty()">
                AND type_of_manu IN
                <foreach item="item" collection="type_of_manu" open="(" separator="," close=")">
                    #{item}
                </foreach>
            </if>
            <if test="emission_standards != null and !emission_standards.isEmpty()">
                AND emission_standards IN
                <foreach item="item" collection="emission_standards" open="(" separator="," close=")">
                    #{item}
                </foreach>
            </if>
            <if test="seat_capacity != -1">
                AND seat_capacity = #{seat_capacity}
            </if>
            <if test="engine != null and !engine.isEmpty()">
                AND engine IN
                <foreach item="item" collection="engine" open="(" separator="," close=")">
                    #{item}
                </foreach>
            </if>
            <if test="drive_type != null and !drive_type.isEmpty()">
                AND drive_type IN
                <foreach item="item" collection="drive_type" open="(" separator="," close=")">
                    #{item}
                </foreach>
            </if>
            <if test="box != null and !box.isEmpty()">
                AND box IN
                <foreach item="item" collection="box" open="(" separator="," close=")">
                    #{item}
                </foreach>
            </if>
            <if test="price_up_limit != 0.0 or price_lower_limit != 0.0">
                AND price BETWEEN #{price_lower_limit} AND #{price_up_limit}
            </if>
            <if test="mileage_up_limit != 0.0 or mileage_lower_limit != 0.0">
                AND mileage BETWEEN #{mileage_lower_limit} AND #{mileage_up_limit}
